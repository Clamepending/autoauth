{
  "manifest_version": 3,
  "name": "OttoAuth Browser Agent",
  "version": "0.2.0",
  "description": "Browser agent side panel for OttoAuth with cloud pairing, local AI planning, and browser automation actions.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["tabs", "tabGroups", "storage", "alarms", "notifications", "scripting", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "OttoAuth Browser Agent",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
